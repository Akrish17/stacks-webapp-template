{
    "name": "amido-stacks",
    "version": "1.0.0",
    "description": "Stacks web application template monorepo made with server side rendered React and node.",
    "main": "",
    "repository": "https://github.com/amido/stacks-webapp-template.git",
    "author": "",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "webapp"
    ],
    "scripts": {
        "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
        "webapp:dev": "yarn workspace @amido-stacks/webapp dev"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.14.0",
        "@typescript-eslint/parser": "^2.14.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-compat": "^3.3.0",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^2.3.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx,jsx}": [
            "eslint . --fix",
            "git add"
        ]
    }
}
